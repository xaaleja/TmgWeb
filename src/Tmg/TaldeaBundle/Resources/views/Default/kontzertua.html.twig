{% extends '::frontend.html.twig' %}
{% block title %}{{'menu.hurrengoak' | trans}}{% endblock %}
{% block article %}
    <section id="kontzertuak">
        <h1>{{'menu.hurrengoak' | trans}}</h1>
        {% if kontzertuak is not empty %}
            {% for kontzertua in kontzertuak %}
                <article class="kontzertu">
                    <div class="kontz-ezk">
                        <div class="data-kontzertu">
                            <h2>{{kontzertua.data |date("Y-m-d") }}</h2>
                        </div>
                        <div class="img-kontzertu">
                            {% if kontzertua.argazkiak is not empty %}
                                <img class="argazki-estiloa" src="{{ asset(argazkien_direktorioa ~ kontzertua.argazkiak[0].argazkia) }}"></img>
                            {% endif %}
                        </div>
                    </div>
                    <div class="kontz-esk">
                        <h3 class="izena-kontzertu">{{kontzertua.izena}}</h3>
                        <div class="info-kontzertu">
                            <p>Beste taldeak: {{kontzertua.besteTaldeak}} </p>
                            <p>Ordua: {{kontzertua.ordua}} </p>
                            <p>Prezioa: {{kontzertua.sarrera}} â‚¬</p>
                            <div class="kontz-oina">
                                <a href={{kontzertua.esteka}}>Informazio gehiago</a>
                            </div>
                        </div>
                    </div>

                </article>
                <hr>
            {% endfor %}
        {% else %}
            <i>Momentuz ez dago kontzerturik</i>
        {% endif %}
    </section>
{% endblock %}
