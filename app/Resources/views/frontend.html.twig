                <a href="{{ path('portada', { '_locale': 'en' }) }}">English</a>
                <a href="{{ path('portada', { '_locale': 'eu' }) }}">Euskara</a>
            {% elseif locale == 'en' %}
                <a href="{{ path('portada', { '_locale': 'es' }) }}">Español</a>
                <a href="{{ path('portada', { '_locale': 'eu' }) }}">Euskara</a>
                <span>English</span>
            {% elseif locale == 'eu' %}
                <a href="{{ path('portada', { '_locale': 'es' }) }}">Español</a>
                <a href="{{ path('portada', { '_locale': 'en' }) }}">English</a>
                <span>Euskara</span>
            {% endif %}
            <div id="tmg-social">
                <a href="https://www.facebook.com/tommygun.santurtzi">Facebook</a>
                <a href="https://twitter.com/TommyGun_TMG">Twitter</a>
                <a href="https://tmg-tommygun.bandcamp.com">Bandcamp</a>
                <a href="https://www.youtube.com/user/TommyGunArmy2010">Youtube</a>
            </div>
        <h1><a href="{{ path('portada') }}"><img class="portada_argazkia" src="{{ asset(argazkien_direktorioa ~ "35.jpg") }}"></img>
</a></h1>
        <nav>
            <ul class="access">
