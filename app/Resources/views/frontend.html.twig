{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/taldea/css/style.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/taldea/css/vinyl.css') }}" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="{{ asset ('bundles/taldea/source/jquery.fancybox.css') }}" type="text/css" media="screen" />
{% endblock %}

{% block body %}
    <header id="cabecera">
        <!--<h1><a href="{{ path('portada') }}">TMG</a></h1> -->
            {% set locale = app.request.locale %}
